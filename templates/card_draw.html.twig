{% extends "base.html.twig" %}

{% block title %}Drawn card{% endblock %}
{% block body %}
<h1>Dina dragna kort är... </h1>
<div class="card-container">
{% for card, attributes in handView %}
{% if attributes["Color: "] == "Red" %}
            <div class="card" style="color:red">{{ card }}</div>
{% else %}
    <div class="card">{{ card }}</div>
            {% endif %}
{% endfor %}
<p>{{ points }}</p>
</div>

<p>Det finns {{ cardsLeft }} kort kvar i leken.</p>
<div class="options">
    <li><a href="{{ path('card_shuffle') }}">Blanda</a></li>
    <li><a href="{{ path('card_landing')}}">Tillbaks till översikten</a></li>
    <li><a href="{{ path('card_draw_num', {num: 1 }) }}">Ta upp det översta kortet i leken </a></li>
    <li><a href="{{ path('card_draw_num', {num: 5 }) }}">Ta upp de fem översta korten i leken </a></li>
</div>
{% endblock %}